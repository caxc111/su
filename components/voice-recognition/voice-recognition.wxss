/* 语音识别组件样式 */
.voice-recognition {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

/* 头部样式 */
.voice-header {
  width: 100%;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
}

.voice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.voice-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 语言切换样式 */
.language-switcher {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.lang-btn {
  padding: 10rpx 30rpx;
  border: 1px solid #ccc;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #555;
  background-color: #fff;
}

.lang-btn.active {
  background-color: #42a5e2;
  color: #fff;
  border-color: #42a5e2;
}

/* 录音按钮区域 */
.record-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.record-status-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.record-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #42a5e2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(66, 165, 226, 0.3);
  transition: all 0.3s;
}

.record-button.recording {
  background-color: #e25842;
  transform: scale(1.1);
  box-shadow: 0 8rpx 16rpx rgba(226, 88, 66, 0.4);
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
}

.record-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

/* 识别结果区域 */
.result-area {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  border-left: 6rpx solid #42a5e2;
  padding-left: 20rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.clear-result {
  text-align: right;
  font-size: 24rpx;
  color: #42a5e2;
  padding: 10rpx;
} 