.article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.article-title {
  font-size: 20px;
  font-weight: bold;
}

/* 测试模式开关样式 */
.test-mode-switch {
  display: flex;
  align-items: center;
  margin: 5px 0;
  padding: 6px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.test-mode-switch text {
  margin-left: 10px;
  color: #666;
}

.test-mode-tip {
  margin-left: auto;
  font-size: 12px;
  color: #ff9500;
}

/* 设置栏样式 */
.settings-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  padding: 8px 12px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.api-switch {
  display: flex;
  align-items: center;
}

.api-mode {
  margin-left: 8px;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 500;
}

.api-mode.mock {
  background-color: #e0e0e0;
  color: #666;
}

.api-mode.real {
  background-color: #aff157;
  color: #333;
}

.settings-button {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.settings-button .icon {
  font-size: 18px;
}

.container {
  padding: 15px;
  display: flex;
  flex-direction: column;
}

.article-content {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  line-height: 1.6;
  font-size: 16px;
  min-height: 30vh;
  max-height: 38vh;
  overflow-y: auto;
}

/* 文章信息样式 */
.article-info {
  display: flex;
  justify-content: space-between;
  padding: 8px 12px;
  margin-bottom: 15px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.info-item {
  display: flex;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: 500;
  margin-left: 5px;
}

.reading-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}

.record-hint {
  margin-bottom: 10px;
  color: #666;
}

.record-hint.recording {
  color: #ff4d4f;
  font-weight: 500;
}

.record-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 16px;
}

.record-time-limit {
  font-size: 12px;
  color: #999;
  margin: 5px 0 10px;
}

.progress-bar-bg {
  width: 100%;
  height: 6px;
  background-color: #f0f0f0;
  border-radius: 3px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #ff4d4f;
  border-radius: 3px;
  transition: width 0.3s linear;
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.result-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.result-title {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.score-display {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 15px;
}

.score-number {
  font-size: 36px;
  font-weight: bold;
  color: #ff9500;
}

.score-unit {
  font-size: 16px;
  color: #666;
  margin-left: 5px;
}

.result-flowers {
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
}

.flower-icon {
  width: 24px;
  height: 24px;
  margin: 2px;
}

.result-feedback {
  text-align: center;
  color: #666;
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

/* 错误显示样式 */
.error-display {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.error-title {
  font-size: 14px;
  font-weight: 500;
  color: #666;
  margin-bottom: 8px;
  text-align: center;
}

.error-content {
  max-height: 150px;
  overflow-y: auto;
  font-size: 14px;
  line-height: 1.6;
  padding: 5px;
  margin-bottom: 8px;
}

.error-hint {
  font-size: 12px;
  color: #999;
  text-align: center;
}

/* 识别文本显示样式 */
.recognized-text {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.recognized-title {
  font-size: 14px;
  font-weight: 500;
  color: #666;
  margin-bottom: 8px;
  text-align: center;
}

.recognized-content {
  max-height: 120px;
  overflow-y: auto;
  font-size: 14px;
  line-height: 1.6;
  padding: 5px;
  color: #333;
  font-style: italic;
}

.recognized-hint {
  font-size: 12px;
  color: #999;
  text-align: center;
  margin-top: 5px;
}

/* rich-text样式通过JS内联方式设置 */

.result-detail {
  margin-bottom: 20px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
  font-size: 14px;
}

.detail-label {
  color: #666;
}

.detail-value {
  font-weight: 500;
}

.result-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.result-actions .btn-primary,
.result-actions .btn-secondary {
  flex: 1;
  margin: 0 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 0;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background-color: #ffaa00;
  color: white;
}

.btn-primary:active {
  background-color: #e09600;
}

.btn-secondary {
  background-color: #50a8ff;
  color: white;
}

.btn-secondary:active {
  background-color: #3d86cc;
}

/* 修正其他选择器问题 */
.error-display .error-content rich-text {
  display: block;
  width: 100%;
}

.recognized-text .recognized-content {
  max-height: 120px;
  overflow-y: auto;
  font-size: 14px;
  line-height: 1.6;
  padding: 5px;
  color: #333;
  font-style: italic;
}

/* 控制按钮行样式 */
.control-buttons-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 20px;
}

/* 通用 action-btn 样式调整 (如果需要覆盖全局或默认button样式) */
.action-btn {
  border: none;
  line-height: 1.5;
  margin: 0;
  padding: 0;
  display: inline-block;
  vertical-align: middle;
  box-sizing: border-box;
}

/* 播放范读按钮样式 */
.action-btn.standard-audio {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #aff157;
  color: #333;
  padding: 10px 20px;
  border-radius: 25px;
  font-size: 14px;
  flex: 1;
  margin: 0 10px;
  height: 40px;
}

.action-btn.standard-audio[disabled] {
  background-color: #e0e0e0;
  color: #999;
}

/* 朗读录音/停止录音按钮样式 */
.action-btn.record-self {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #aff157;
  color: #333;
  padding: 10px 20px;
  border-radius: 25px;
  font-size: 14px;
  flex: 1;
  margin: 0 10px;
  height: 40px;
}

.action-btn.record-self.recording {
  background-color: #ff4d4f;
  color: white;
}

.action-btn.record-self[disabled] {
  background-color: #e0e0e0;
  color: #999;
}

