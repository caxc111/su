/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e6e6e6;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #888;
  font-size: 28rpx;
}

/* 文章标题区域 */
.article-header {
  width: 100%;
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-align: center;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  padding: 0 20rpx;
}

.lesson-no {
  color: #666;
}

.language {
  color: #666;
}

/* 区块样式 */
.section {
  width: 100%;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.play-btn {
  display: flex;
  align-items: center;
  background-color: #f0f9f0;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  color: #8ce552;
  font-size: 26rpx;
}

.play-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 文本框样式 */
.text-box {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 300rpx;
  display: flex;
  align-items: flex-start;
}

.text-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  width: 100%;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* 空白状态提示文本 */
.empty-text {
  color: #999;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 240rpx; /* 略小于文本框的min-height */
}

/* 分数区域 */
.score-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 36rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.score-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.score-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #ff9a3c;
  margin-bottom: 24rpx;
}

.score-comment {
  font-size: 30rpx;
  color: #666;
}

/* 底部按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 30rpx;
}

.btn {
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-primary {
  background-color: #8ce552;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(140, 229, 82, 0.3);
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1px solid #ddd;
}

/* 录音按钮 */
.record-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: auto;
  padding-bottom: 40rpx;
}

/* 麦克风按钮样式 - 取消绿色背景 */
.mic-button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.mic-button.recording {
  animation: pulse 1s infinite alternate;
}

@keyframes pulse {
  0% { transform: scale(1); }
  100% { transform: scale(1.1); }
}

.mic-icon {
  width: 100rpx;
  height: 100rpx;
}

.record-tip {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 文章标题 */
.article-title {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.level {
  font-size: 24rpx;
  color: #888;
}

/* 统计区域 */
.stats-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 句子练习区 */
.sentence-container {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sentence-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.nav-button {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  margin: 0;
  background: #f0f0f0;
  color: #333;
  line-height: 1.8;
}

.nav-button[disabled] {
  color: #ccc;
  background: #f8f8f8;
}

.sentence-count {
  font-size: 26rpx;
  color: #666;
}

.sentence-content {
  padding: 30rpx;
  font-size: 34rpx;
  line-height: 1.6;
  color: #333;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background-color: #fafafa;
  min-height: 200rpx;
  display: flex;
  align-items: center;
}

/* 语速调节 */
.rate-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.rate-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 70rpx;
  font-weight: bold;
}

.rate-slider {
  flex: 1;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.control-btn {
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.prev-btn, .next-btn {
  width: 180rpx;
  background-color: #f0f0f0;
  color: #333;
}

.speak-btn {
  width: 220rpx;
  background-color: #3A8FFE;
  color: #fff;
}

.speaking {
  background-color: #ff6b6b;
}

button[disabled] {
  background-color: #f5f5f5 !important;
  color: #bbb !important;
}

/* 历史得分 */
.history-container {
  margin: 20rpx 0;
}

.history-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.history-scores {
  display: flex;
  flex-wrap: wrap;
}

.history-score-item {
  background-color: #f0f0f0;
  border-radius: 6rpx;
  padding: 8rpx 16rpx;
  margin: 6rpx;
}

.history-score-value {
  font-size: 26rpx;
  color: #3A8FFE;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.action-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
}

.back-btn {
  background-color: #f0f0f0;
  color: #333;
}

.reset-btn {
  background-color: #ff9a3c;
  color: #fff;
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-content {
  padding: 40rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  text-align: center;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  background-color: #3A8FFE;
  color: #fff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

/* 文本对比区域样式 */
.comparison-result {
  padding: 10rpx;
  line-height: 1.6;
  word-break: break-all;
}

/* 字符样式 */
.char {
  display: inline-block;
  font-size: 32rpx;
  padding: 2rpx;
}

/* 正确字符样式 */
.char.correct {
  color: #4caf50; /* 绿色 */
}

/* 错误字符样式 */
.char.incorrect {
  color: #f44336; /* 红色 */
} 