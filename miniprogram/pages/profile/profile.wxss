.header {
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  padding: 40rpx;
  background-color: #fff;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
  border-radius: 60rpx;
  overflow: hidden;
  /* 添加阴影效果增强立体感 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

/* 头像编辑按钮 */
.avatar-button-overlay {
  position: absolute !important;
  top: 0 !important;
  left: 0 !important;
  width: 100% !important;
  height: 100% !important;
  opacity: 0 !important;
  z-index: 10 !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* 移除原有的灰蒙版 */
.avatar-container:after {
  display: none;
}

