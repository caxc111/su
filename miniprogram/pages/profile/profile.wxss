/* 移除不再需要的edit-text样式 */
.edit-text {
  display: none;
}

/* 昵称输入框 */
.nickname-input {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
  width: 100%;
}

.login-status {
  font-size: 24rpx;
  color: var(--brand-green);
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

/* 头像按钮样式 */
.avatar-button {
  width: 240rpx !important;
  height: 64rpx !important;
  line-height: 64rpx !important;
  font-size: 24rpx !important;
  color: #fff !important;
  background-color: var(--brand-green) !important;
  border-radius: 32rpx !important;
  margin: 20rpx auto !important;
  padding: 0 !important;
}

.avatar-button::after {
  border: none !important;
}

/* 昵称输入表单 */
.nickname-form {
  margin: 20rpx auto;
  width: 240rpx;
}

.stats-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #f97316;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.menu-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.logout-section {
  padding: 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
} 