/* article-edit.wxss - 文章编辑页样式 */

.container {
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 表单样式 */
.edit-form {
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #eee;
}

.textarea {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #eee;
  line-height: 1.5;
}

/* 属性选择区域 */
.property-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.property-section .form-item {
  width: 48%;
}

.picker {
  height: 88rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 字数统计 */
.word-count {
  text-align: right;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 30rpx;
}

/* 按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.action-btn {
  width: 48%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn {
  background-color: #8ce552;
  color: #fff;
} 